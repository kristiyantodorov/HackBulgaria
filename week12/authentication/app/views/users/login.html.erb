<%= form_for :user, url: '/users/:id' do |f| %>
  <p>
    <div.class="field">
      <%= f.label :username %>
      <%= f.text_field :username %>
    </div>
  </p>

  <p>
    <div.class="field">
      <%= f.label :password %>
      <%= f.text_field :password %>
    </div>
  </p>

  <p>
  <div.class="actions">
    <%= f.submit "Login" %>
  </div>
  </p>
<% end %>
