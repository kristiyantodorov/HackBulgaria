<h1>Create task</h1>

<%= form_for :task, url: lecture_tasks_path do |f| %>
  <div.class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>
  </div>
  <div.class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %><br>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
